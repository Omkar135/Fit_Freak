<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Setting">

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="30dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cd1"
        android:layout_width="320dp"
        android:layout_height="110dp"
        android:backgroundTint="#ECEBFF"
        android:layout_marginStart="35dp"
        android:layout_marginTop="70dp"
        android:elevation="50dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_blank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/img_blank"/>
            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:layout_marginStart="40dp"
                    android:textSize="23dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp" />
                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Email"
                    android:layout_marginStart="40dp"
                    android:textSize="23dp"
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="380dp"
        android:layout_height="624dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="220dp"
            android:hint="Change Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/change_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="10dp"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:hint="Change Weight">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/change_weight"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:inputType="textWebPassword"
                android:padding="10dp"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

<!--        <com.google.android.material.textfield.TextInputLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_marginStart="20dp"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:hint="Re-enter Password">-->

<!--            <com.google.android.material.textfield.TextInputEditText-->
<!--                android:id="@+id/reenter_pass"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="40dp"-->
<!--                android:inputType="textWebPassword"-->
<!--                android:padding="15dp"-->
<!--                tools:ignore="TouchTargetSizeCheck" />-->
<!--        </com.google.android.material.textfield.TextInputLayout>-->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:hint="Change Email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/change_mail"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:inputType="textWebPassword"
                android:padding="10dp"
                tools:ignore="TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>



    </LinearLayout>

