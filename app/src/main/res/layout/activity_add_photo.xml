<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Add_Photo">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Add your Current Body Photos"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="60dp"
        android:text="Front Photo"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imbt1"
        android:layout_width="250dp"
        android:layout_height="230dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/add_button"
        android:src="@drawable/plus"
        tools:ignore="SpeakableTextPresentCheck" />

   <!-- <ImageView
        android:id="@+id/IVPreviewImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="35dp" />
-->


    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="350dp"
        android:text="Back Photo"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imbt2"
        android:layout_width="250dp"
        android:layout_height="230dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/add_button"
        android:src="@drawable/plus"
        tools:ignore="SpeakableTextPresentCheck" />

   <!-- <ImageView
        android:id="@+id/IVPreviewImage2"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@id/text3"
        android:layout_marginStart="35dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="35dp" />-->

    <Button
        android:id="@+id/save"
        android:layout_width="260dp"
        android:layout_height="44dp"
        android:layout_below="@id/imbt2"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/login_sub_bt"
        android:text="Save"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="TouchTargetSizeCheck" />
</RelativeLayout>